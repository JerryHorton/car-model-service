<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cug.sxy.infrastructure.dao.IConfigCategoryDao">

    <!-- 结果映射 -->
    <resultMap id="dataMap" type="cn.cug.sxy.infrastructure.dao.po.ConfigCategoryPO">
        <id column="id" property="id"/>
        <result column="category_code" property="categoryCode"/>
        <result column="category_name" property="categoryName"/>
        <result column="status" property="status"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="creator" property="creator"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, category_code, category_name, status, sort_order, creator, created_time, updated_time
    </sql>

    <!-- 插入配置类别 -->
    <insert id="insert" parameterType="cn.cug.sxy.infrastructure.dao.po.ConfigCategoryPO" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO config_category (category_code, category_name, status, sort_order, creator, created_time,
                                     updated_time)
        VALUES (#{categoryCode}, #{categoryName}, #{status}, #{sortOrder}, #{creator}, #{createdTime}, #{updatedTime})
    </insert>

    <!-- 更新配置类别 -->
    <update id="update" parameterType="cn.cug.sxy.infrastructure.dao.po.ConfigCategoryPO">
        UPDATE config_category
        <set>
            <if test="categoryName != null and categoryName.length() > 0">
                category_name = #{categoryName},
            </if>
            <if test="sortOrder != null">
                sort_order = #{sortOrder},
            </if>
            <if test="status != null and status.length() > 0">
                status = #{status},
            </if>
            updated_time = #{updatedTime}
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据ID查询配置类别 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM config_category
        WHERE id = #{id}
    </select>

    <!-- 根据类别编码查询配置类别 -->
    <select id="selectByCode" parameterType="java.lang.String" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM config_category
        WHERE category_code = #{categoryCode}
    </select>

    <!-- 查询所有可用的配置类别 -->
    <select id="selectAllEnabled" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM config_category
        WHERE status = 'ENABLED'
        ORDER BY sort_order ASC
    </select>

    <!-- 根据条件查询配置类别 -->
    <select id="selectByCondition" parameterType="cn.cug.sxy.infrastructure.dao.po.ConfigCategoryPO"
            resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM config_category
        WHERE 1 = 1
        <if test="categoryCode != null and categoryCode.length() > 0">
            and category_code = #{categoryCode}
        </if>
        <if test="categoryName != null and categoryName.length() > 0">
            and category_name LIKE #{categoryName}
        </if>
        ORDER BY sort_order ASC
    </select>

    <!-- 检查类别编码是否存在 -->
    <select id="countByCode" parameterType="java.lang.String" resultType="int">
        SELECT COUNT(1)
        FROM config_category
        WHERE category_code = #{categoryCode}
    </select>

    <!-- 删除配置类别 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE
        FROM config_category
        WHERE id = #{id}
    </delete>

</mapper>
