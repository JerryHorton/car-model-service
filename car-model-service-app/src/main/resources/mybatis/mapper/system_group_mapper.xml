<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cug.sxy.infrastructure.dao.ISystemGroupDao">

    <!-- 结果映射 -->
    <resultMap id="dataMap" type="cn.cug.sxy.infrastructure.dao.po.SystemGroupPO">
        <id column="id" property="id"/>
        <result column="category_id" property="categoryId"/>
        <result column="group_code" property="groupCode"/>
        <result column="group_name" property="groupName"/>
        <result column="group_name_en" property="groupNameEn"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="status" property="status"/>
        <result column="creator" property="creator"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, category_id, group_code, group_name, group_name_en, sort_order, status, creator, created_time, updated_time
    </sql>

    <!-- 插入系统分组 -->
    <insert id="insert" parameterType="cn.cug.sxy.infrastructure.dao.po.SystemGroupPO" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO system_group (category_id, group_code, group_name, group_name_en, sort_order, status, creator,
                                  created_time,
                                  updated_time)
        VALUES (#{categoryId}, #{groupCode}, #{groupName}, #{groupNameEn}, #{sortOrder}, #{status}, #{creator},
                #{createdTime}, #{updatedTime})
    </insert>

    <!-- 更新系统分组 -->
    <update id="update" parameterType="cn.cug.sxy.infrastructure.dao.po.SystemGroupPO">
        UPDATE system_group
        <set>
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
            <if test="groupCode != null and groupCode.length() > 0">
                group_code = #{groupCode},
            </if>
            <if test="groupName != null and groupName.length() > 0">
                group_name = #{groupName},
            </if>
            <if test="groupNameEn != null">
                group_name_en = #{groupNameEn},
            </if>
            <if test="sortOrder != null">
                sort_order = #{sortOrder},
            </if>
            <if test="status != null and status.length() > 0">
                status = #{status},
            </if>
            updated_time = #{updatedTime}
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据ID查询系统分组 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_group
        WHERE id = #{id}
    </select>

    <!-- 根据分组编码查询系统分组 -->
    <select id="selectByGroupCode" parameterType="java.lang.String" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_group
        WHERE group_code = #{groupCode}
    </select>

    <!-- 根据系统大类ID查询系统分组列表 -->
    <select id="selectByCategoryId" parameterType="java.lang.Long" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_group
        WHERE category_id = #{categoryId}
        ORDER BY sort_order ASC
    </select>

    <!-- 查询所有系统分组 -->
    <select id="selectAll" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_group
        ORDER BY sort_order ASC
    </select>

    <!-- 根据状态查询系统分组 -->
    <select id="selectByStatus" parameterType="java.lang.String" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_group
        WHERE status = #{status}
        ORDER BY sort_order ASC
    </select>

    <!-- 根据名称模糊查询系统分组 -->
    <select id="selectByGroupNameLike" parameterType="java.lang.String" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_group
        WHERE group_name LIKE #{groupNameLike}
        ORDER BY sort_order ASC
    </select>

    <!-- 统计指定分组编码的记录数 -->
    <select id="countByGroupCode" parameterType="java.lang.String" resultType="int">
        SELECT COUNT(1)
        FROM system_group
        WHERE group_code = #{groupCode}
    </select>

    <!-- 物理删除系统分组 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE
        FROM system_group
        WHERE id = #{id}
    </delete>

    <!-- 逻辑删除系统分组（更新状态为DELETED） -->
    <update id="logicalDeleteById" parameterType="java.lang.Long">
        UPDATE system_group
        SET status       = 'DELETED',
            updated_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 根据大类ID删除系统分组 -->
    <delete id="deleteByCategoryId" parameterType="java.lang.Long">
        DELETE
        FROM system_group
        WHERE category_id = #{categoryId}
    </delete>

    <!-- 根据大类ID逻辑删除系统分组 -->
    <update id="logicalDeleteByCategoryId" parameterType="java.lang.Long">
        UPDATE system_group
        SET status       = 'DELETED',
            updated_time = NOW()
        WHERE category_id = #{categoryId}
    </update>

</mapper>