<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cug.sxy.infrastructure.dao.ISystemCategoryDao">

    <!-- 结果映射 -->
    <resultMap id="dataMap" type="cn.cug.sxy.infrastructure.dao.po.SystemCategoryPO">
        <id column="id" property="id"/>
        <result column="category_code" property="categoryCode"/>
        <result column="category_name" property="categoryName"/>
        <result column="category_name_en" property="categoryNameEn"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="status" property="status"/>
        <result column="creator" property="creator"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, category_code, category_name, category_name_en, sort_order, status, creator, created_time, updated_time
    </sql>

    <!-- 插入系统大类 -->
    <insert id="insert" parameterType="cn.cug.sxy.infrastructure.dao.po.SystemCategoryPO" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO system_category (category_code, category_name, category_name_en, sort_order, status, creator,
                                     created_time,
                                     updated_time)
        VALUES (#{categoryCode}, #{categoryName}, #{categoryNameEn}, #{sortOrder}, #{status}, #{creator},
                #{createdTime}, #{updatedTime})
    </insert>

    <!-- 更新系统大类 -->
    <update id="update" parameterType="cn.cug.sxy.infrastructure.dao.po.SystemCategoryPO">
        UPDATE system_category
        <set>
            <if test="categoryCode != null and categoryCode.length() > 0">
                category_code = #{categoryCode},
            </if>
            <if test="categoryName != null and categoryName.length() > 0">
                category_name = #{categoryName},
            </if>
            <if test="categoryNameEn != null">
                category_name_en = #{categoryNameEn},
            </if>
            <if test="sortOrder != null">
                sort_order = #{sortOrder},
            </if>
            <if test="status != null and status.length() > 0">
                status = #{status},
            </if>
            updated_time = #{updatedTime}
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据ID查询系统大类 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_category
        WHERE id = #{id}
    </select>

    <!-- 根据大类编码查询系统大类 -->
    <select id="selectByCategoryCode" parameterType="java.lang.String" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_category
        WHERE category_code = #{categoryCode}
    </select>

    <!-- 查询所有系统大类 -->
    <select id="selectAll" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_category
        ORDER BY sort_order ASC
    </select>

    <!-- 根据状态查询系统大类 -->
    <select id="selectByStatus" parameterType="java.lang.String" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_category
        WHERE status = #{status}
        ORDER BY sort_order ASC
    </select>

    <!-- 根据名称模糊查询系统大类 -->
    <select id="selectByCategoryNameLike" parameterType="java.lang.String" resultMap="dataMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_category
        WHERE category_name LIKE #{categoryNameLike}
        ORDER BY sort_order ASC
    </select>

    <!-- 统计指定大类编码的记录数 -->
    <select id="countByCategoryCode" parameterType="java.lang.String" resultType="int">
        SELECT COUNT(1)
        FROM system_category
        WHERE category_code = #{categoryCode}
    </select>

    <!-- 物理删除系统大类 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE
        FROM system_category
        WHERE id = #{id}
    </delete>

    <!-- 逻辑删除系统大类（更新状态为DELETED） -->
    <update id="logicalDeleteById" parameterType="java.lang.Long">
        UPDATE system_category
        SET status       = 'DELETED',
            updated_time = NOW()
        WHERE id = #{id}
    </update>

</mapper>